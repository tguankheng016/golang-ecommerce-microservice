{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Yarp": {
    "routes": {
      "identities": {
        "clusterId": "identities",
        "match": {
          "path": "/api/v1/identities/{**catch-all}"
        }
      },
      "products": {
        "clusterId": "products",
        "match": {
          "path": "/api/v1/products/{**catch-all}"
        }
      }
    },
    "clusters": {
      "products": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:8001"
          }
        }
      },
      "identities": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:8000"
          }
        }
      }
    }
  }
}
